{
  "private": true,
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently -c green,blue \"npm:dev:*\"",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "concurrently -c green,blue \"npm:build:*\"",
    "test:client": "cd client && npm run test",
    "test:server": "cd server && npm run test",
    "test": "concurrently -c green,blue \"npm:test:*\"",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint": "concurrently -c green,blue \"npm:lint:*(!fix)\"",
    "lint:client:fix": "cd client && npm run lint:fix",
    "lint:server:fix": "cd server && npm run lint:fix",
    "lint:fix": "concurrently -c green,blue \"npm:lint:*:fix\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "21.6.1",
    "npm": "10.4.0"
  },
  "workspaces": [
    "client",
    "server",
    "shared/*"
  ]
}
